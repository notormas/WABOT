{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["ESNext"],
    "outDir": "dist",
    "strict": false,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}